<div class="container">
  <h3>New Photo</h3>

  <%= form_with model: @image do |form| %>
  <%= render "/shared/error_messages", object: @image %>
    <div class="form-group">
      <%= form.label :title, class: "form-label"  %><br>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group"
      <%= form.label :photo, class: "form-label" %><br>
      <%= form.file_field :photo, accept: "image/png, image/x-png,image/jpeg", class: "form-control" %>
    </div>

    <br>

    <div class="form-group">
      <%= form.label :tags, class: "form-label" %>
      <select class="form-control" multiple="multiple" multiple name="image[tag_list][]" id="image_tag_list" >
        <% Image.tag_counts.map(&:name).each do |tag| %>
          <option value="<%= tag %>" <%= "selected" if @image.tag_list.include?(tag) %>><%= tag %></option>
        <% end %>
      </select>
    </div>
    <br>

    <div class="form-group">
      <%= form.submit class: "btn btn-success"%>
    </div>
  <% end %>
</div>
