<div class="container">

<div class="secondary-links">
  <%= link_to 'Back', root_path, :class => "btn btn-light" %>
</div>

  <div class="card">
    <%= image_tag @image.photo, alt: "Photo", :class => "card-img-top"%>
    <div class="card-body">
      <h2 class="card-title"><%= @image.title %></h2>
      <div>
        <h5 class="card-text">Tags</h5>
        <% @image.tags.each do |tag| %>
          <li>
            <%= link_to tag.name, search_image_path(:tag => tag.name ) %>
          </li>
        <% end %>
      </div>
    </div>
  </div>

</div>
